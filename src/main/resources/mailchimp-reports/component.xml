<component name="mailchimp-reports" type="synapse/template">
    <subComponents>
        <component name="listReports">
            <file>listReports.xml</file>
            <description>Get campaign reports.</description>
        </component>
        <component name="getReport">
            <file>getReport.xml</file>
            <description>Get a specific campaign report.</description>
        </component>
        <component name="listCampaignAbuseReports">
            <file>listCampaignAbuseReports.xml</file>
            <description>Get abuse complaints for a campaign.</description>
        </component>
        <component name="listClickReports">
            <file>listClickReports.xml</file>
            <description>Get campaign click details.</description>
        </component>
        <component name="getClickReport">
            <file>getClickReport.xml</file>
            <description>Get click details for a specific link in a campaign.</description>
        </component>
        <component name="getLocation">
            <file>getLocation.xml</file>
            <description>Get top open locations for a specific campaign.</description>
        </component>
        <component name="listSentTo">
            <file>listSentTo.xml</file>
            <description>Get information about campaign recipients.</description>
        </component>
        <component name="listUnsubscribes">
            <file>listUnsubscribes.xml</file>
            <description>Get unsubscribed list members.</description>
        </component>
        <component name="getCampaignAbuseReport">
            <file>getCampaignAbuseReport.xml</file>
            <description>Get a specific abuse complaints for a campaign.</description>
        </component>
    </subComponents>
</component>